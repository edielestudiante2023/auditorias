#--------------------------------------------------------------------
# CONFIGURACIÓN PARA PRODUCCIÓN
#--------------------------------------------------------------------
# Este archivo es un ejemplo de configuración para el ambiente de producción.
# Copia este archivo como .env en el servidor de producción y ajusta los valores.
#--------------------------------------------------------------------

#--------------------------------------------------------------------
# ENVIRONMENT
#--------------------------------------------------------------------

CI_ENVIRONMENT = production

#--------------------------------------------------------------------
# APP
#--------------------------------------------------------------------

# URL BASE DE PRODUCCIÓN (ajusta según tu dominio)
app.baseURL = 'https://auditorias.cycloidtalent.com/'
app.appTimezone = America/Bogota

# Forzar HTTPS en producción (recomendado)
# app.forceGlobalSecureRequests = true

#--------------------------------------------------------------------
# DATABASE
#--------------------------------------------------------------------

database.default.hostname = localhost
database.default.database = cycloid_auditorias
database.default.username = tu_usuario_db
database.default.password = tu_password_seguro
database.default.DBDriver = MySQLi
database.default.DBPrefix =
database.default.port = 3306

#--------------------------------------------------------------------
# ENCRYPTION
#--------------------------------------------------------------------

# IMPORTANTE: Generar una clave de encriptación única para producción
# Ejecuta: php spark key:generate
# encryption.key = tu_clave_de_encriptacion_generada

#--------------------------------------------------------------------
# SESSION
#--------------------------------------------------------------------

session.driver = 'CodeIgniter\Session\Handlers\FileHandler'
# session.savePath = null

#--------------------------------------------------------------------
# LOGGER
#--------------------------------------------------------------------

# En producción, usar nivel de log menos verboso (3 = errores, 4 = todos)
logger.threshold = 3

#--------------------------------------------------------------------
# EMAIL - SENDGRID
#--------------------------------------------------------------------

email.fromEmail = 'notificacion.cycloidtalent@cycloidtalent.com'
email.fromName = 'Cycloid Talent - Auditorías'
sendgrid.apiKey = 'TU_API_KEY_DE_SENDGRID'

# URL del tutorial en video para proveedores
# Cambia esta URL cuando el tutorial esté listo (ejemplo: https://www.youtube.com/watch?v=XXXXXXXXX)
tutorial.videoUrl = 'https://www.youtube.com/'

#--------------------------------------------------------------------
# NOTAS IMPORTANTES PARA PRODUCCIÓN
#--------------------------------------------------------------------
# 1. Asegúrate de que el DocumentRoot de Apache/Nginx apunte a la carpeta 'public'
# 2. Configura SSL/HTTPS en tu servidor web
# 3. Genera una nueva encryption.key con: php spark key:generate
# 4. Cambia las credenciales de la base de datos
# 5. Usa un API key válido de SendGrid
# 6. Elimina o comenta las rutas de test (test-upload, test-email) en Routes.php
# 7. Verifica que los permisos de las carpetas writable/ estén correctos (775)
